 Задание 4
     <script>
        "use strict";
        let number = prompt("Введите трёхзначное число");
        const sot = Math.trunc(number / 100);
        const number_2 = number % 100;
        const des = Math.trunc(number_2 / 10);
        const c = number % 10;
        alert(` В числе ${number} количество сотен: ${sot}, десятков: ${des}, единиц: ${c}`);
    </script>
</body>

</html>
